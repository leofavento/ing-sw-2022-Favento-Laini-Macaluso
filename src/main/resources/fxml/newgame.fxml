<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.client.gui.controllers.initial.newGameController">
   <children>
      <ChoiceBox fx:id="numberChoiceBox" layoutX="225.0" layoutY="99.0" prefWidth="150.0" />
      <Label alignment="CENTER" layoutY="58.0" prefHeight="17.0" prefWidth="600.0" text="Select the number of players">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <Label alignment="CENTER" layoutX="1.0" layoutY="180.0" prefHeight="17.0" prefWidth="600.0" text="Check the flag to enable Expert Mode">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <CheckBox fx:id="myCheckBox" layoutX="246.0" layoutY="218.0" mnemonicParsing="false" onAction="#change" text="Expert Mode">
         <font>
            <Font size="16.0" />
         </font>
      </CheckBox>
      <Label fx:id="modeLabel" alignment="CENTER" layoutX="3.0" layoutY="257.0" prefHeight="17.0" prefWidth="600.0" text="You will play with Normal Mode rules">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <Button layoutX="248.0" layoutY="311.0" mnemonicParsing="false" onAction="#createGame" text="Create Game">
         <font>
            <Font size="16.0" />
         </font>
      </Button>
      <Label fx:id="errorMessage" alignment="CENTER" layoutY="357.0" prefHeight="20.0" prefWidth="603.0" text="Please select the number of players" textFill="#fc0202" visible="false">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
